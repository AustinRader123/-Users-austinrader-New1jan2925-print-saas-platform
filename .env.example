# Root environment template for docker-compose and local scripts

NODE_ENV=production

POSTGRES_DB=deco_network
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

BACKEND_PORT=3100
FRONTEND_PORT=5173
REDIS_PORT=6379

API_URL=http://localhost:3100
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/deco_network
REDIS_URL=redis://localhost:6379

JWT_SECRET=replace-with-a-long-random-secret-at-least-32-chars
JWT_EXPIRY=7d

# Public web origins allowed by backend CORS (comma-separated)
CORS_ORIGIN=http://localhost:5173
TRUST_PROXY=false

# Billing and provider toggles
BILLING_PROVIDER=mock
S3_USE_LOCAL=true
ENABLE_VENDOR_SYNC=false
ENABLE_EMAIL_NOTIFICATIONS=false

# Build-time frontend API base
VITE_API_URL=/api

# DecoNetwork credential encryption key (base64, 32 bytes)
# openssl rand -base64 32
DN_ENC_KEY=
