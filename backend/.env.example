NODE_ENV=development
PORT=3100
BACKEND_PORT=3100
API_URL=http://localhost:3100

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/deco_network

# JWT
JWT_SECRET=replace-with-a-long-random-secret-at-least-32-chars
JWT_EXPIRY=7d

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Billing provider: mock | stripe
BILLING_PROVIDER=mock

# Phase 14 provider config (safe defaults)
PAYMENTS_PROVIDER=mock
PAYMENTS_ENABLED=false
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

SHIPPING_PROVIDER=mock
SHIPPING_ENABLED=false
SHIPPO_TOKEN=
EASYPOST_API_KEY=
SHIPPING_WEBHOOK_SECRET=

TAX_PROVIDER=internal
TAX_ENABLED=true
AVALARA_API_KEY=

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=skuflow
S3_USE_LOCAL=true

# Redis (for queues)
REDIS_URL=redis://localhost:6379

# SendGrid Email
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@skuflow.ai

# Features
ENABLE_VENDOR_SYNC=false
ENABLE_MOCKUP_GENERATION=true
ENABLE_EMAIL_NOTIFICATIONS=false

# CORS
# In production, set to comma-separated allowed origins (example: https://app.example.com,https://admin.example.com)
CORS_ORIGIN=http://localhost:5173

# Set true when running behind a trusted reverse proxy (Render/Nginx/ALB/etc.)
TRUST_PROXY=false

# Domain activation guard
ALLOW_MANUAL_DOMAIN_ACTIVATION=false

# DecoNetwork integration encryption key (base64, 32 bytes). Generate with:
#   openssl rand -base64 32
DN_ENC_KEY=

