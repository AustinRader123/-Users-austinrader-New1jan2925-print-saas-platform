{
  "name": "skuflow-backend",
  "version": "1.0.0",
  "description": "SkuFlow - Custom Product Commerce & Production Platform",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "node ../scripts/run-backend-dev.mjs",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "worker": "tsx watch src/worker.ts",
    "worker:start": "tsx src/worker.ts",
    "postinstall": "prisma generate",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "db:reset": "../scripts/run-noninteractive.sh prisma migrate reset --force --skip-generate && ../scripts/run-noninteractive.sh prisma generate && npm run db:seed",
    "db:migrate": "../scripts/run-noninteractive.sh prisma migrate deploy",
    "db:deploy": "../scripts/run-noninteractive.sh prisma migrate deploy",
    "db:seed": "../scripts/run-noninteractive.sh tsx src/db/seed.ts",
    "smoke:phase2a": "bash scripts/smoke-phase2a.sh",
    "smoke:phase2b": "bash scripts/smoke-phase2b.sh",
    "smoke:phase2c": "bash scripts/smoke-phase2c.sh",
    "smoke:phase3": "bash scripts/smoke-phase3.sh",
    "smoke:phase3_1": "bash scripts/smoke-phase3_1.sh",
    "smoke:phase4": "bash scripts/smoke-phase4.sh",
    "smoke:phase5": "bash scripts/smoke-phase5.sh",
    "smoke:phase6": "bash scripts/smoke-phase6.sh",
    "smoke:phase7": "bash scripts/smoke-phase7.sh",
    "smoke:phase7_1": "bash scripts/smoke-phase7_1.sh",
    "smoke:phase8": "bash scripts/smoke-phase8.sh",
    "smoke:phase9": "bash scripts/smoke-phase9.sh",
    "smoke:phase10": "bash scripts/smoke-phase10.sh",
    "supplier:scheduler": "tsx src/scripts/supplier-scheduler.ts",
    "supplier:scheduler:once": "tsx src/scripts/supplier-scheduler.ts --once",
    "clean": "node ../scripts/run-platform.mjs clean",
    "stop": "node ../scripts/run-platform.mjs stop",
    "doctor": "node ../scripts/run-platform.mjs doctor",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "commerce",
    "custom-products",
    "mockups",
    "design",
    "print-shop"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "5.7.1",
    "@sendgrid/mail": "^7.7.0",
    "aws-sdk": "^2.1400.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.11.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.4",
    "sharp": "^0.32.6",
    "stripe": "^13.5.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/pdfkit": "^0.17.5",
    "@types/qrcode": "^1.5.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "prisma": "5.7.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}
